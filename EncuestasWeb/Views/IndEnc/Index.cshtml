
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section estilos{
    <style>
        span.error {
            color: red;
            font-size: 0.8em;
            font-weight: bold;
        }
    </style>
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page">Despliegue de Encuestas</li>
    </ol>
</nav>
<!--ENCUESTAS DESPLEGABLES -->
<div class="row mb-4">
    <div class="col-sm-12">
        <div class="card border-dark">
            <div class="card-header text-white bg-dark">
                <h5 class="float-left">Seleccione una Encuesta</h5>
                <button class="btn btn-light btn-sm float-right" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <i class="fas fa-align-justify"></i>
                </button>
                <div class="btn-sm float-right">
                    <i class=""></i>
                </div>

                <div class="form-group">
                    <button class="btn btn-light btn-sm float-right" type="button" onclick="lanzaPreguntas()"><i class="fa fa-plus"></i> Lanzar encuesta</button>
                </div>

            </div>
                <div class="collapse show" id="collapseOne">
                    <div class="card-body">

                        <div class="row align-items-end">
                            <div class="col-sm-10">
                                <div class="form-group">
                                    <label for="cboencuestas">Encuestas:</label>
                                    <select id="cboencuestas" class="form-control">
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <button class="btn btn-primary" type="button" onclick="buscarPreguntas()"><i class="fas fa-search"></i> Buscar Preguntas</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>


            </div>

    </div>
</div>
<!--PREGUNTAS LISTA-->
<div class="row">
    <div class="col-sm-12">
        <div class="card border-dark">
            <div class="card-header text-white bg-dark">
                <h5 class="float-left">Lista de Preguntas</h5>
                <button class="btn btn-success btn-sm float-right" onclick="abrirPopUpForm(null)">
                    <i class="fa fa-plus" aria-hidden="true"></i> Agregar Pregunta
                </button>
            </div>
            <div class="card-body">
                <table id="tbdata" class="table table-striped table-bordered compact" style="width:100%">
                    <thead>
                        <tr>
                            <th>Descripcion</th>
                            <th>Unidad</th>
                            <th>Tipo</th>
                            <th>Perfil</th>
                            <th>Referencia Indicador</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>

    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Pregunta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="txtid" type="hidden" value="0" />

                <form id="formNivel">
                    <div class="row">
                        <div class="col-sm-12">
                            <!--PREGUNTAS DESPLEGABLE combo-->
                            <div class="row mb-4">
                                <div class="col-sm-12">
                                    <div class="card border-dark">
                                        <div class="collapse show" id="collapseOne">
                                            <div class="card-body">
                                                <div class="row align-items-end">
                                                    <div class="col-sm-10">
                                                        <div class="form-group">
                                                            <label for="cbopreguntas">Pregunta a agregar:</label>
                                                            <select id="cbopreguntas" class="form-control">
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <div class="form-group">
                                                            <button class="btn btn-success" type="button" onclick="Guardar()"><i class="fa fa-plus"></i> Agregar</button>                       
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <!--PREGUNTAS DESPLEGABLE combo -->
                        </div>
                    </div>
                </form>

            </div>
            </div>
        </div>
</div>



@section scripts{

    <script src="@Url.Content("~/Scripts/Views/IndEnc_Index.js")" type="text/javascript"></script>

}

