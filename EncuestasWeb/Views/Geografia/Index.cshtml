@{
    ViewBag.Title = "Geografia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section estilos{
    <style>
        span.error {
            color: red;
            font-size: 0.8em;
            font-weight: bold;
        }
    </style>
}
<!--compatble con menú-->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page">Geografia</li>
    </ol>
</nav>
<div class="row">
    <div class="col-sm-12">
        <div class="card border-dark">
            <div class="card-header text-white bg-dark">
                <h5 class="float-left">Lista de Paises</h5>
                <button class="btn btn-success btn-sm float-right" onclick="abrirPopUpForm(null)">
                    <i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo
                </button>
            </div>
            <div class="card-body">
                <table id="tbdata" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Pais</th>
                            <th>CoordenadasX</th>
                            <th>CoordenadasY</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Geografia</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="txtid" type="hidden" value="0" />

                <form id="formNivel">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtpais">Pais <span class="error"></span></label>
                                <input type="text" class="form-control required" id="txtpais" name="txtpais" autocomplete="9%%943511">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtcoordenadasx">Coordenadas X <span class="error"></span></label>
                                <input type="text" class="form-control required" id="txtcoordenadasx" name="txtcoordenadasx" autocomplete="9%%943511">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtcoordenadasy">Coordenadas Y <span class="error"></span></label>
                                <input type="text" class="form-control required" id="txtcoordenadasy" name="txtcoordenadasy" autocomplete="9%%943511">
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<!--Fin comptible menu-->

@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Geografia_Index.js")" type="text/javascript"></script>

}
