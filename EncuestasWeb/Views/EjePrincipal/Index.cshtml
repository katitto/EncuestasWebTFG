        <li class="breadcrumb-item" aria-current="page">Eje Principal</li>
    </ol>
</nav>
<div class="row">
    <div class="col-sm-12">
        <div class="card border-dark">
            <div class="card-header text-white bg-dark">
                <h5 class="float-left">Lista de Paises</h5>
                <button class="btn btn-success btn-sm float-right" onclick="abrirPopUpForm(null)">
                    <i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo
                </button>
            </div>
            <div class="card-body">
                <table id="tbdata" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Referencia</th>
                            <th>Nivel</th>
                            <th>Nombre</th>
                            <th>IdPadre</th>
                            <th>IdPerfil</th>
                            <th>IdGeografia</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <table id="tbdatahijos" class="" style="width:100%">
                    <tbody></tbody>
                </table>
            </div>
        </div>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">EjePrincipal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="txtid" type="hidden" value="0" />

                <form id="formNivel">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtrefeje">RefEje <span class="error"></span></label>
                                <input type="text" class="form-control required" id="txtrefeje" name="txtrefeje" autocomplete="9%%943511">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtnivel">Nivel <span class="error"></span></label>
                                <input type="text" class="form-control required" id="txtnivel" name="txtnivel" autocomplete="9%%943511">
                            </div>
                        </div>
                        <div class="col-sm-6">
