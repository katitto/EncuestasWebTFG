
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section estilos{
    <style>
        #inner-right {
            max-height: 300px;
            overflow-y: scroll;
        }
    </style>
}



<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Reportes</a></li>
        <li class="breadcrumb-item active" aria-current="page">Usuarios</li>
    </ol>
</nav>


<div class="row">
    <div class="col-sm-12">
        <div class="card border-dark">
            <div class="card-header text-white bg-dark">
                <h5 class="float-left">Lista de Usuarios</h5>
            </div>
            <div class="card-body">

                <div class="row mb-2">
                    <div class="col-sm-12">
                        <button class="btn btn-info float-left" onclick="printData()">
                            <i class="fas fa-print"></i> Imprimir
                        </button>

                    </div>
                </div>

                <div class="row" id="inner-right">
                    <div class="col-sm-12">
                        <table id="tbdata" class="table table-striped table-bordered table-sm table-responsive-sm" style="width:100%">
                            <thead class="thead-dark">
                                <tr>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>User</th>
                                    <th>Contraseña</th>
                                    <th>Email</th>
                                    <th>Alcance en la organización</th>
                                    <th>Rol</th>
                                    <th>Id</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>


@section scripts{

    <script src="@Url.Content("~/Scripts/Views/InformeUsuarios_Index.js")" type="text/javascript"></script>
}

